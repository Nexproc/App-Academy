<form action="<%= albums_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h1>Create a new Album!</h1>
  <p><label for="album_name">Album Name</label>
  <input type="text" name="album[name]" placeholder="Album Name" id="album_name"></p>
  <p>Style:
    <label for="live">Live</label>
    <input type="radio" id="live" name="album[style]" value="live">
    <label for="studio">Studio</label>
    <input type="radio" id="studio" name="album[style]" value="studio"></p>
  <input type="submit" value="Make This Album!"></p>
</form>
